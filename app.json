{
  "expo": {
    "name": "NeuropointMobileApp",
    "slug": "NeuropointMobileApp",
    "version": "1.0.0",
    "icon": "./assets/logo/neurologo.png",
    "scheme": "neuropointmobileapp",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "The app accesses your photos to let you share them with your friends.",
        "NSCameraUsageDescription": "The app uses the camera to let you take photos and videos.",
        "NSBluetoothPeripheralUsageDescription": "Required for Bluetooth audio devices",
        "NSMicrophoneUsageDescription": "This app uses the microphone to share your audio."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo/neurologo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "INTERNET",
        "CAMERA",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "WAKE_LOCK",
        "FOREGROUND_SERVICE"
      ],
      "edgeToEdgeEnabled": true,
      "package": "com.royjhon5.NeuropointMobileApp"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/logo/neurologo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/logo/neurologo.png"
    },
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {}
    }
  }
}
